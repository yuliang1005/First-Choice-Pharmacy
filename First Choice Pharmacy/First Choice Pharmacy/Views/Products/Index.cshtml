@model IEnumerable<Assignment2.Models.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome to First Choice Pharmacy!</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

                <tr>
                    <td><img style="height:300px;width:300px;" src="@Url.Content("~/Images/Product/" + item.Path)" alt="@Html.DisplayFor(modelItem => item.Title)" /></td>
                    <td><a href="@Url.Action("Details", new { id = item.Id })">
                           <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                        </a>
                   </td>
                    <td><h2>$@Html.DisplayFor(modelItem => item.Price)</h2></td>
                </tr>
        }
    </tbody>
</table>
@section Scripts {

    @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
    <script>
 $(document).ready(function () {
 $('.table').DataTable();
 });
    </script>
}
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css"
      rel="stylesheet" />

