@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide">
    <!-- Carousel Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Carousel item -->
    <div class="carousel-inner">
        <div class="item active">
            <a href="@Url.Action("Login", "Account")">
                <img src="~/Images/Home/pic1.jpg" alt="First slide" />
                <div class="carousel-caption">
                    <h2>Join Us Now!</h2>
                    <p>We devoted to provide the best services to All the people.</p>
                </div>
            </a>
        </div>
        <div class="item">
            <a href="@Url.Action("Details", "Products", new {id=11})">
                <img src="~/Images/Home/pic2.jpg" alt="Second slide" />
                <div class="carousel-caption">
                    <h2>The best shampoo</h2>
                    <p>The first choice for controling oils.</p>
                </div>
            </a>
        </div>
        <div class="item">
            <a href="@Url.Action("Index", "Bookings")">
                <img src="~/Images/Home/pic3.jpg" alt="Third slide" />
                <div class="carousel-caption">
                    <h2>Excellent Pharmacists</h2>
                    <p>Click on Services and make an appointment with our pharmacist.</p>
                </div>
            </a>
        </div>
    </div>
    <!-- Carousel navigation -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div> 
<div class="row" style="margin-top:10px">
    <div class="col-sm-4">
        <a href="@Url.Action("Index", "Products")">
            <img src="~/Images/Home/choose your medicine Now!.png" alt="Choose your medicine now!" style="height:200px;width:100%" />
        </a>
    </div>
    <div class="col-sm-4">
        <a href="@Url.Action("Index", "Bookings")">
            <img src="~/Images/Home/book with pharmacist.png" alt="Book with your pharmarcist now!" style="height:200px;width:100%" />
        </a>
    </div>
    <div class="col-sm-4">
        <a href="@Url.Action("Index", "Stores")">
            <img src="~/Images/Home/find a store now.png" alt="Find a store now!" style="height:200px;width:100%" />
        </a>
    </div>
</div>